@model ChangeMailViewModel
@{
    ViewData["Title"] = "邮箱修改";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="ChangeMail" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldMail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="OldMail" class="form-control" readonly/>
            <span asp-validation-for="OldMail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewEmail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewEmail" class="form-control" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">确 定</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
